<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:background="@android:color/white">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_back"
                    android:padding="10dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="#1F2937"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Chi tiết người dùng"
                    android:textColor="#1F2937"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/tvAvatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="NA"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/circle_purple"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/tvUserNameTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyen Van A"
                android:textColor="#3B82F6"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@android:color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Họ và tên"
                        android:textColor="#6B7280"
                        android:textSize="13sp"/>

                    <EditText
                        android:id="@+id/etFullName"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Nguyen Van A"
                        android:textSize="15sp"
                        android:textColor="#1F2937"
                        android:background="@drawable/bg_edittext"
                        android:paddingHorizontal="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="#6B7280"
                        android:textSize="13sp"/>

                    <EditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="nguyenvana@email.com"
                        android:textSize="15sp"
                        android:textColor="#1F2937"
                        android:background="@drawable/bg_edittext"
                        android:paddingHorizontal="16dp"
                        android:inputType="textEmailAddress"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Level"
                        android:textColor="#6B7280"
                        android:textSize="13sp"/>

                    <EditText
                        android:id="@+id/etLevel"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="5"
                        android:textSize="15sp"
                        android:textColor="#1F2937"
                        android:background="@drawable/bg_edittext"
                        android:paddingHorizontal="16dp"
                        android:inputType="number"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="XP"
                        android:textColor="#6B7280"
                        android:textSize="13sp"/>

                    <EditText
                        android:id="@+id/etXP"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="1250"
                        android:textSize="15sp"
                        android:textColor="#1F2937"
                        android:background="@drawable/bg_edittext"
                        android:paddingHorizontal="16dp"
                        android:inputType="number"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngày tham gia"
                        android:textColor="#6B7280"
                        android:textSize="13sp"/>

                    <EditText
                        android:id="@+id/etJoinDate"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="10/10/2024"
                        android:textSize="15sp"
                        android:textColor="#1F2937"
                        android:background="@drawable/bg_edittext"
                        android:paddingHorizontal="16dp"
                        android:focusable="false"
                        android:clickable="false"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Lưu thay đổi"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/bg_button_blue"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>