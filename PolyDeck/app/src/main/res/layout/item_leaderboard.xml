<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    android:background="#FFFFFF">

    <RelativeLayout
        android:id="@+id/itemContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@drawable/bg_leaderboard_item">

        <!-- Rank Number -->
        <TextView
            android:id="@+id/tvRank"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="#4"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#9CA3AF"
            android:gravity="center"/>

        <!-- Avatar -->
        <TextView
            android:id="@+id/tvAvatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_toEndOf="@id/tvRank"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_circle_gray_light"
            android:gravity="center"
            android:text="HE"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#6B7280"/>

        <!-- Name & Streak -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tvAvatar"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_toStartOf="@id/tvXP"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hoang Thi E"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:maxLines="1"
                android:ellipsize="end"/>

            <!-- Streak -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_fire"
                    android:tint="#F97316"/>

                <TextView
                    android:id="@+id/tvStreak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="9 days"
                    android:textSize="12sp"
                    android:textColor="#F97316"/>
            </LinearLayout>
        </LinearLayout>

        <!-- XP Score -->
        <LinearLayout
            android:id="@+id/tvXP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/tvScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1950"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#111827"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XP"
                android:textSize="11sp"
                android:textColor="#9CA3AF"/>
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>