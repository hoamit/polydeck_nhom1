<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivDeckIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_default_deck_icon" 
            android:background="@drawable/bg_deck_icon_container"
            android:scaleType="centerInside"
            android:padding="8dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tvDeckName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Động vật"
                android:textColor="#1F2937"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDeckStatsItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80 từ • 284 người dùng • 11/11/2024"
                android:textColor="#6B7280"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnEditDeck"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_edit"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="#3B82F6" />

            <ImageButton
                android:id="@+id/btnDeleteDeck"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="#EF4444" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
