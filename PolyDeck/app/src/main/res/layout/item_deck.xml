<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@android:color/white">

        <FrameLayout
            android:id="@+id/flIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/rounded_bg">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_deck_white"
                android:layout_gravity="center"
                app:tint="@android:color/white"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvDeckName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Động vật"
                    android:textColor="#1F2937"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã xuất bản"
                    android:textColor="#10B981"
                    android:textSize="11sp"
                    android:background="@drawable/bg_status_active"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvDeckInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50 từ • 234 người dùng • 01/10/2024"
                android:textColor="#9CA3AF"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#F9FAFB"
        android:padding="12dp"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/btnView"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:text="Xem"
            android:textSize="12sp"
            android:textColor="#3B82F6"
            android:background="@drawable/bg_button_outline_blue"
            android:layout_marginEnd="6dp"/>

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:text="Sửa"
            android:textSize="12sp"
            android:textColor="#8B5CF6"
            android:background="@drawable/bg_button_outline_purple"
            android:layout_marginEnd="6dp"/>

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:text="Xóa"
            android:textSize="12sp"
            android:textColor="#EF4444"
            android:background="@drawable/bg_button_outline_red"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>